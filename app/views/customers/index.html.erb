<h1>Listing customers</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Iugu client</th>
      <th>Iugu payment method</th>
      <th>Card display number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.email %></td>
        <td><%= customer.iugu_client_id %></td>
        <td><%= customer.iugu_payment_method_id %></td>
        <td><%= customer.card_display_number %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

